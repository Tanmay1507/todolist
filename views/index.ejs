    <title>todoList</title>
</head>
<body>


  <%- include("nev.ejs") %>
  <div class="whole">
     <h3>Tasks</h3>
     <form action="/addtask" method="post"><div class="textfild">
          <input class="textinput" type="task" name="task" placeholder="enter your task..." required>
          <button type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-patch-plus" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5"/>
